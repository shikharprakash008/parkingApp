<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookingSlot1">


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/bg_main"
        android:layout_height="80dp">

        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Slot 1 Booking"
            android:textSize="17sp"
            android:textColor="#ffff"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_layout_1"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/linearHor1"
            android:orientation="horizontal">
            
            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:text="Duration"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_marginLeft="60dp"
                android:text="Amount"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearHor2"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="30 minutes"
                android:textSize="20sp"
                android:layout_marginLeft="12dp"
                android:fontFamily="monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginLeft="60dp"
                android:text="5 Rs."
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearHor3"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="1 hour"
                android:textSize="20sp"
                android:layout_marginLeft="12dp"
                android:fontFamily="monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginLeft="60dp"
                android:text="10 Rs."
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearHor4"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="1hr 30mins"
                android:textSize="20sp"
                android:layout_marginLeft="12dp"
                android:fontFamily="monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginLeft="60dp"
                android:text="15 Rs."
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearHor5"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="2 hours"
                android:textSize="20sp"
                android:layout_marginLeft="12dp"
                android:fontFamily="monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginLeft="60dp"
                android:text="20 Rs."
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearHor6"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="2hr 30mins"
                android:textSize="20sp"
                android:layout_marginLeft="12dp"
                android:fontFamily="monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginLeft="60dp"
                android:text="25 Rs."
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearHor7"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="3 hours"
                android:textSize="20sp"
                android:layout_marginLeft="12dp"
                android:fontFamily="monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_marginLeft="60dp"
                android:text="30 Rs."
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/linearHor8"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/success"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="140dp"
                android:onClick="success"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/error"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:onClick="cancel"/>

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>